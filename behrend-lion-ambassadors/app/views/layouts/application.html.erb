<!DOCTYPE html>
<html>
<head>
  <title>Behrend Lion Ambassadors</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<!--	Header
		Contents

		<yield>

		Footer??	-->
<!-- CSS ids must be unique whereas class can be applied to many things -->

<!-- container div -->
<div id="container">
	<!-- divider div -->
	<div class="divider">
	</div>
	<!-- END divider div -->

	<!-- header-container div -->
	<div id="header-container">

		<!-- image-container -->
		<div id="image-container">

			<%= image_tag("logo-new.png") %>	<!-- rails for showing image -->

		</div>
		<!-- END image-container -->



	</div>
	<!-- END header-container div -->

	<!-- contents-container div -->
	<div id="contents-container">

		<!-- ul-container div -->
		<div id="ul-container">

			<!-- contents ul -->
			<ul class="contents">

				<%= link_to root_path do %><li>Home</li><% end %>
				<%= link_to join_us_path do %><li>Join Us</li><% end %>


				<%= link_to about_path do %><li>About</li><% end %>
				<li>Contact</li>

				<!-- spacer div -->
				<div id="spacer">
				</div>
				<!-- END spacer div -->

				<%= link_to "http://www.facebook.com/BehrendLionAmbassadors", class: "img" do %><li class="img"><%= image_tag("facebook.png") %></li><% end %>
				<%= link_to "http://www.twitter.com/BehrendLA", class: "img" do %><li><%= image_tag("twitter.png") %></li><% end %>
				<%= link_to "http://www.instagram.com/", class: "img" do %><li><%= image_tag("instagram.png") %></li><% end %>

			</ul>
			<!-- END contents ul -->

		</div>
		<!-- END ul-container div -->

	</div>
	<!-- END contents-container div -->

	<!-- yield div -->
	<div id="yield">
		<%= yield %>
	</div>
	<!-- END yield div -->

</div>
<!-- END container div -->

</body>
</html>
